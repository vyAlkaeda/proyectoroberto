<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DIAGNÓSTICO PROFESIONAL"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Pregunta 1: ¿Su animal está vivo? -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Su animal está vivo?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupVivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radioVivoSi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SÍ"
                android:layout_marginEnd="32dp" />

            <RadioButton
                android:id="@+id/radioVivoNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO" />
        </RadioGroup>

        <!-- Contenedor para preguntas adicionales (inicialmente oculto) -->
        <LinearLayout
            android:id="@+id/containerPreguntasAdicionales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Pregunta 2: Edad de los cerdos enfermos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edad de los cerdos enfermos:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroupEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/radioEdad1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1-4 semanas (0-28 días)" />

                <RadioButton
                    android:id="@+id/radioEdad2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5-10 semanas (29-70 días)" />

                <RadioButton
                    android:id="@+id/radioEdad3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="11-16 semanas (71-112 días)" />

                <RadioButton
                    android:id="@+id/radioEdad4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="17-22 semanas (113-154 días)" />
            </RadioGroup>

            <!-- Pregunta 3: Número de cerdos afectados -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de cerdos afectados:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroupAfectados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/radioAfectadosMas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Más del 10%"
                    android:layout_marginEnd="32dp" />

                <RadioButton
                    android:id="@+id/radioAfectadosMenos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menos del 10%" />
            </RadioGroup>

            <!-- Pregunta 4: Incremento de mortalidad -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Incremento de mortalidad:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

